@model Abc.Sql.MvcWebUI.Models.CartSummaryViewModel

<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
   
    @foreach (var item in Model.Cart.CartLines)
    {
        <li>
            <a>@item.Product.ProductName <span class="w3-badge w3-red"> @item.Quantity </span></a>
        </li>
    }
    <li role="separator" class="dropdown-divider"></li>
    <li>
        <a><i class="fa fa-cart-plus" style="font-size:24px" aria-hidden="false"></i>@Model.Cart.Total</a>
    </li>
    <li role="separator" class="dropdown-divider"></li>
    <li>
        <a asp-controller="Cart" asp-action="List">Go to cart details</a>
    </li>

</ul>
